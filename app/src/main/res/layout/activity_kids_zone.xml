<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.KidsZone"
    android:orientation="vertical"
    android:background="#8b96d2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/header_background"
        android:elevation="6dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_view_quiz_left_arrow"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_left_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="#fff"
            android:onClick="back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Kids Zone"
            android:textSize="25dp"
            android:textColor="#fff"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp">
        <EditText
            android:id="@+id/searchbox"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/textview_background"
            android:hint="Letters"
            android:paddingStart="15dp"
            android:elevation="5dp"
            android:inputType="text"
            android:layout_weight="2"
            android:layout_marginEnd="10dp"
            />
        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:onClick="voice"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/mic_back"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
               android:layout_margin="5dp"
                android:background="@drawable/ic_mic_black_24dp"
                android:foreground="?attr/selectableItemBackground"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/delete_24dp"
            android:backgroundTint="#272b3c"
            android:onClick="clear"
            android:foreground="?attr/selectableItemBackground"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/speak"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/ic_volume_up_black_24dp"
        android:backgroundTint="#272b3c"
        android:onClick="speak"
        android:foreground="?attr/selectableItemBackground"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:visibility="invisible"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"/>
</LinearLayout>